{
  "name": "stripe-mcp",
  "version": "1.0.0",
  "description": "Stripe Model Context Protocol server for fraud operations and full API coverage",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:stdio && npm run build:shttp",
    "build:stdio": "smithery build src/index.ts --transport stdio -o .smithery/stdio/index.cjs",
    "build:shttp": "smithery build src/index.ts --transport shttp -o .smithery/shttp/index.cjs",
    "dev": "smithery dev",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@smithery/sdk": "^1.6.4",
    "stripe": "^19.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@smithery/cli": "^1.4.1",
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3"
  }
}
